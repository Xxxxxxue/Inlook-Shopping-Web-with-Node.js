<div class="col-lg-9">
  <div class="text-right">
    <a href="/perfil"><button class="btn-success">Volver</button></a>
  </div>
	<div class="row" style="background: #53266D;">
		<div class="col mx-auto">
			<div class="card">
				<div class="card-header">
					<h4>Mis pedidos</h4>
				</div>
				<div class="table table-responsive mt-4">
					<table class="table table-striped table-bordered" id="workTable" style="color: #67B32E;">
						<thead class="text-center">
							<tr>
								<th class="align-middle">ID</th>
								<th class="align-middle">Producto</th>
								<th class="align-middle">Diseño</th>
								<th class="align-middle">Precio Unitario</th>
								<th class="align-middle">Fecha de finalización</th>
								<th class="align-middle">Estado</th>
								<th class="align-middle">Detalle</th>
							</tr>
						</thead>
						{{#each pedido}}
						<tbody>
							<tr>
								<td class="align-middle text-center">{{ID}} </td>
								<td class="align-middle text-center">{{Nombre}}</td>
								<td class="align-middle text-center">
									<img src="{{imgd}}" style="width: 50px;height: 50px; border: 1px solid;">
								</td>
								<td class="align-middle text-center">{{PrecioUnitario}}</td>
								<td class="align-middle text-center">{{F_ultimo}}</td>
								<td class="align-middle text-center">{{estado}}</td>
								<td class="align-middle text-center">
									<a href="/perfil/mispedidos/detalle/{{ID}}">
										<button data-toggle="modal"
										data-target="#detalles">
											<i class="fas fa-file"></i>
										</button>
									
									</a>
								</td>
							</tr>
					
							{{else}}
							<div class="col-md-6 mx-auto">
								<div class="card card-body text-center">
									<p>NO HAS COMPRADO NADA!</p>
									<br>
									<a class="btn btn-success" href="/" style="font-size: 20px;">¡VAMOS A COMPRA!</a>
								</div>
							</div>
							{{/each}}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

</div>