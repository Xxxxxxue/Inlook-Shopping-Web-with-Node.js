			<div class="mx-auto">
								  <nav>
								    <ul class="pagination">

			<%if(current == 1) { %>
				<li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>';
			<%}else {%>
			
				<li class="page-item "><a class="page-link p" href="/<% current-1 %>">Previous</a></li>
			<%}%>

			<%var i = (Number(current) > 8 ? Number(current)-7 : 1)%>
				
			<%if(i !== 1) {%>
				<li class="page-item"><a class="page-link" href="#">...</a></li>
			<%}%>

			<%for(;i<=(Number(current) + 7) && i<=page;i++) { %>
				<%if(i == current) {%>
					<li class="page-item active "><a class="page-link p" href="/<%= i %>"><%= i %></a></li>
				<%}else {%> 
				
					<li class="page-item "><a class="page-link p" href="/<%= i %>"><%= i %></a></li>
				<%}%>
				<%if(i == Number(current)+7 && i<page) {%>
					<li class="page-item"><a class="page-link" href="#">...</a></li>
				<%}%>
			<%}%>


			<%if(current == page) {%>
				navpag += '<li class="page-item disabled"><a class="page-link" href="#">Next</a></li>';
			<%}else {%>
				navpag += '<li class="page-item "><a class="page-link p" href="/'<%current+1%>">Next</a></li>';
			<%}%>

			</ul></nav></div>

			